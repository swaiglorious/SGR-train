<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sgr_train">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SGRtrain.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".bookingPage"></activity>
        <activity android:name=".BookingPage" />
        <activity android:name=".alltickets" />
        <activity
            android:name=".signupPage"
            android:theme="@style/Theme.SGRtrain" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".loginPage"
            android:label="@string/app_name"
            android:theme="@style/Theme.SGRtrain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>